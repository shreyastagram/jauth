# ============================================================
# FixHomi Auth Service - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# For local development with H2, you don't need most of these
# ============================================================

# ------------------------------------------------------------
# DATABASE (Required for production with Neon/Supabase)
# ------------------------------------------------------------
# Get these from your Neon dashboard: https://console.neon.tech
# Format the JDBC URL parts separately (JDBC doesn't support credentials in URL)

DATABASE_HOST=ep-small-salad-a1pzae7k-pooler.ap-southeast-1.aws.neon.tech
DATABASE_NAME=neondb
DATABASE_USERNAME=neondb_owner
DATABASE_PASSWORD=npg_9RF7HItBqWXw
# ------------------------------------------------------------
# JWT CONFIGURATION (Required for production)
# ------------------------------------------------------------
# Generate a secure secret: openssl rand -base64 64
# Must be at least 512 bits (64+ characters) for HS512

JWT_SECRET=xXbeJ9A1aU3vpD1YKHQ7tBqvOYlZqZet0pywMSHW3D4QEdDdIqnp244kqTxYjn7b1HxgfHR2Sbi6qupfAA123456

# ------------------------------------------------------------
# GOOGLE OAUTH2 (Required for Google Sign-In)
# ------------------------------------------------------------
# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
# 
# IMPORTANT: For mobile Google Sign-In (React Native/iOS/Android),
# you need to create OAuth client IDs for each platform in the SAME project.
# Web client ID is used for redirect-based OAuth flow.
# iOS/Android client IDs are used for mobile SDK token verification.

# Web OAuth client ID (for redirect-based OAuth)
GOOGLE_CLIENT_ID=524781184814-nkbud6c3r44b1plqpm77p27ejfi3de3j.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=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

# Mobile OAuth client IDs (for React Native / native apps)
# Create these in Google Cloud Console under "iOS" and "Android" application types
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id.apps.googleusercontent.com

# ------------------------------------------------------------
# EMAIL SERVICE - Brevo (Optional, uses stub in development)
# ------------------------------------------------------------
# Get API key from: https://app.brevo.com/settings/keys/api

EMAIL_PROVIDER=stub
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@fixhomi.com
BREVO_SENDER_NAME=FixHomi

# ------------------------------------------------------------
# SMS SERVICE - Twilio (Optional, uses stub in development)
# ------------------------------------------------------------
# Get credentials from: https://console.twilio.com

SMS_PROVIDER=stub
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ------------------------------------------------------------
# APPLICATION URLS
# ------------------------------------------------------------
# Base URL of your deployed auth service
FIXHOMI_BASE_URL=http://localhost:8080

# Frontend app URL (for password reset links)
FIXHOMI_FRONTEND_URL=http://localhost:3000

# Node.js Backend API URL (for inter-service communication)
NODEJS_BACKEND_URL=http://localhost:5001

# ------------------------------------------------------------
# CORS CONFIGURATION (Security)
# ------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Add all your frontend and backend URLs that need to access this service
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001,http://localhost:8081,http://localhost:19006

# ------------------------------------------------------------
# RATE LIMITING (Optional - enabled by default)
# ------------------------------------------------------------
RATE_LIMIT_ENABLED=true

# ------------------------------------------------------------
# SERVER CONFIGURATION
# ------------------------------------------------------------
PORT=8080

# Spring profile: 'default' for H2, 'prod' for PostgreSQL
SPRING_PROFILES_ACTIVE=prod
